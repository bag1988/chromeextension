{
  "manifest_version": 3,
  "name": "__MSG_extTitle__",
  "description": "__MSG_extDesc__",
  "update_url": "https://127.0.0.1:9291/api/v1/UpdateChromiumExtensions?background=true",
  "version": "2.7.2.38",
  "minimum_chrome_version": "120",
  "default_locale": "ru",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "background",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "offscreen"
  ]
}