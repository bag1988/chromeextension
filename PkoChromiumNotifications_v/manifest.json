{
  "manifest_version": 3,
  "name": "Системные уведомления ПКО",
  "description": "Программный комплекс оповещения",
  "update_url": "https://127.0.0.1:9291/api/v1/UpdateChromiumExtensions",
  "version": "1.2.4.5",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ], 
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "notifications",
    "webNavigation",
    "offscreen",
    "management"
  ]
}